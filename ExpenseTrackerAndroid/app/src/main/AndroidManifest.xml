<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseTracker"
        tools:targetApi="31">
        
        <!-- Main Activity (Dashboard) -->
        <activity
            android:name=".ui.dashboard.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Create Group Activity -->
        <activity
            android:name=".ui.group.CreateGroupActivity"
            android:parentActivityName=".ui.dashboard.MainActivity" />
        
        <!-- Add Expense Activity -->
        <activity
            android:name=".ui.expense.AddExpenseActivity"
            android:parentActivityName=".ui.dashboard.MainActivity" />
        
        <!-- Record Payment Activity -->
        <activity
            android:name=".ui.settlement.RecordPaymentActivity"
            android:parentActivityName=".ui.dashboard.MainActivity" />
        
        <!-- Settlement Activity -->
        <activity
            android:name=".ui.settlement.SettlementActivity"
            android:parentActivityName=".ui.dashboard.MainActivity" />
    </application>

</manifest>
