<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Friend Group Expense Tracker</display-name>
    <description>
        Academic project for DBMS and Java subjects.
        Manages shared expenses within friend groups.
    </description>
    
    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- 
        SERVLET CONFIGURATION
        
        Note: Servlets are configured using @WebServlet annotations in Java code.
        This web.xml only contains basic application configuration.
        
        Available API Endpoints:
        - /api/group      - Group operations
        - /api/expense    - Expense operations
        - /api/payment    - Payment/Transaction operations
        - /api/settlement - Settlement/Balance operations
    -->
    
    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.html</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error.html</location>
    </error-page>
    
</web-app>
